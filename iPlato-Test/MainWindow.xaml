<Window x:Class="iPlato_Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:iPlato_Test"
        mc:Ignorable="d"
        Title="iPlato Test Application" Height="450" Width="800">
    <Grid Margin="0,0,-0.4,115">
        <DataGrid ItemsSource="{Binding ProfessionList}"
                      AutoGenerateColumns="False"
                      Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Width="*" Binding="{Binding Name}"/>           
                <DataGridTextColumn Header="DOB" Width="*" Binding="{Binding DOB}"/>           
                <DataGridTextColumn Header="Profession" Width="*" Binding="{Binding Profession}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
